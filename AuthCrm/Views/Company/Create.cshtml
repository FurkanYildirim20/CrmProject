@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@model AuthCrm.Data.Models.Company*@
@model CreateViewModel

@* burayı liste alacak şekilde uyarlaman lazım dedim
    işte sanatını konuşturucan
*@

<div class="container-fluid">
    <h1 class="mt-4">Create</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-pen-fancy"></i>
                    Firma Ekle
                </div>
                <div class="card-body">
                    <form id="CreateCompanyForm" asp-controller="Company" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Şirket Adı</label>
                            <input asp-for="@Model.Company.Name" class="form-control" required />
                            <span asp-validation-for="@Model.Company.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Şirket Adresi</label>
                            <input asp-for="@Model.Adresses" class="form-control" required />
                            <span asp-validation-for="@Model.Adresses" class="text-danger"></span>

                        </div>
                        <div>
                            <div class="form-group">
                                <label>şehir</label>
                                <select>
                                    @foreach (var item in @Model.Cities)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <br />
                        <button class="btn btn-primary" type="submit" form="CreateCompanyForm">Ekle</button>
                        <button class="btn btn-danger" type="reset" form="CreateCompanyForm">Sıfırla</button>
                        <a class="btn btn-secondary" asp-controller="Company" asp-action="Index">Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
